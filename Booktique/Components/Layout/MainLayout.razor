@inherits LayoutComponentBase
@using Booktique.Components.Pages
@using Booktique.Models.Services
@using Microsoft.EntityFrameworkCore
@using static Booktique.Models.MainModels.User
@inject CartService cartService
@implements IDisposable
@inject AuthenticationStateProvider AuthProvider
@inject IDbContextFactory<BooktiqueContext> DbFactory

<div class="page">
    <main>
        <div class="top-row px-4 shadow-sm d-flex align-items-center justify-content-between">

            <div class="d-flex align-items-center gap-3">
                <a class="navbar-brand me-4" href="">
                    <strong style="color: #2d3436; font-size: 1.4rem;">Booktique</strong>
                </a>

                <nav class="d-none d-md-flex align-items-center gap-2">
                    <NavLink class="nav-horizontal-link" href="" Match="NavLinkMatch.All">
                        <i class="bi bi-house-door"></i> Home
                    </NavLink>
                    <NavLink class="nav-horizontal-link" href="/favorites">
                        <i class="bi bi-heart"></i> Favorites
                    </NavLink>
                    <NavLink class="nav-horizontal-link" href="/ask-ai">
                        <i class="bi bi-magic"></i> AI Assistant
                    </NavLink>

                    <AuthorizeView Roles="User, Administrator">
                        <NavLink class="nav-horizontal-link" href="/subscriptions">
                            <i class="bi bi-star"></i> Subscriptions
                        </NavLink>
                    </AuthorizeView>
                    @if (isSubscribed)
                    {
                        <NavLink class="nav-horizontal-link" href="/chat">
                            <i class="bi bi-chat-dots"></i> Messenger
                        </NavLink>
                    }
                    @if (currentSubscriptionLevel == 2)
                    {
                        <NavLink class="nav-horizontal-link" href="/antiquelistings">
                            <i class="bi bi-bank"></i> Antique Booktique
                        </NavLink>
                    }
                </nav>
            </div>

            <div class="d-flex align-items-center gap-2">

                <AuthorizeView Roles="Administrator">
                    <a class="nav-horizontal-link admin-theme" href="/admin/dashboard" title="Dashboard">
                        <i class="bi bi-speedometer2"></i>
                    </a>
                </AuthorizeView>

                <AuthorizeView Roles="User">
                    <Authorized>
                        <a class="nav-horizontal-link position-relative" href="/cart" title="Cart">
                            <i class="bi bi-cart3"></i>
                            @if (cartService.Items.Any())
                            {
                                <span class="cart-badge">@cartService.Items.Sum(i => i.Quantity)</span>
                            }
                        </a>
                    </Authorized>
                </AuthorizeView>

                <AuthorizeView>
                    <Authorized>
                        <NavLink class="nav-horizontal-link" href="/contact">
                            <i class="bi bi-headset"></i> Contact
                        </NavLink>
                        <div class="dropdown ms-2">
                            <button class="user-pill dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @if (!string.IsNullOrEmpty(profilePictureUrl))
                                {
                                    <img src="@profilePictureUrl" class="user-avatar-nav" alt="Profile" />
                                }
                                else
                                {
                                    <span class="user-initial">@context.User.Identity?.Name?[0].ToString().ToUpper()</span>
                                }
                                <span class="d-none d-sm-inline ms-1">@context.User.Identity?.Name</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 animate-slide-up">
                                <li><a class="dropdown-item text-dark" href="/profile"><i class="bi bi-person me-2"></i>Profile</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="/logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
                            </ul>
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <a href="/login" class="login-pill">Login</a>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

