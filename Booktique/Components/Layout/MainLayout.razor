@inherits LayoutComponentBase
@using Booktique.Components.Pages

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-end">
            <AuthorizeView Roles="Administrator">
                <div class="nav-item px-3">
                    <a class="btn btn-outline-light hover-dark-text" href="/users">
                        <span class="bi bi-list-nested-nav-menu"></span> Users
                    </a>
                </div>
                <div class="add-book-item px-3">
                    <a class="btn btn-outline-light hover-dark-text" href="/books/create">
                        <span class="bi bi-list-nested-nav-menu"></span> Add Book
                    </a>
                </div>
            </AuthorizeView>
            <AuthorizeView>
                <Authorized>
                    <div class="dropdown">
                        <button class="btn btn-outline-light dropdown-toggle text-brown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            @context.User.Identity?.Name
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item hover-dark-text" href="/profile">Profile</a></li>
                            <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
                        </ul>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <a href="/login" class="btn btn-outline-light">Login</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>


        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>