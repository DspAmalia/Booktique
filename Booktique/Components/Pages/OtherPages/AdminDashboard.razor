@page "/admin/dashboard"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using Booktique.Models.MainModels
@inject BooktiqueContext DbContext
@attribute [Authorize(Roles = "Administrator")]
@rendermode InteractiveServer

<PageTitle>Admin Dashboard | Booktique</PageTitle>
<div class="main-wrapper py-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="text-brown">Admin <strong>Dashboard</strong></h2>
                <p class="text-muted small">Central control panel - Data updated in real time.</p>
            </div>
         
            <div class="text-end">
                <div class="d-flex align-items-center gap-2">
                    <span class="badge bg-white text-brown border shadow-sm px-3 py-2 rounded-pill">
                        <i class="bi bi-clock me-1"></i> @DateTime.Now.ToString("HH:mm")
                    </span>
                    <span class="badge bg-warning text-white shadow-sm px-3 py-2 rounded-pill">
                        <i class="bi bi-calendar3 me-1"></i> @DateTime.Now.ToString("dd.MM.yyyy")
                    </span>
                </div>
            </div>
        </div>

        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <a href="/admin/reports/orders" class="text-decoration-none h-100 d-block">
                    <div class="stat-card p-4 shadow-sm border-0 bg-white h-100 card-hover-primary">
                        <p class="text-muted small mb-1 fw-bold text-uppercase">Orders</p>
                        <div class="d-flex justify-content-between align-items-end">
                            <h3 class="fw-bold mb-0 text-primary">@totalOrders</h3>
                            <div class="stat-icon bg-soft-blue text-primary">
                                <i class="bi bi-cart-check-fill"></i>
                            </div>
                        </div>
                        <div class="mt-2 x-small text-primary"><i class="bi bi-search me-1"></i> See Orders Report</div>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a href="/admin/reports/sales" class="text-decoration-none h-100 d-block">
                    <div class="stat-card p-4 shadow-sm border-0 bg-white h-100 card-hover-success">
                        <p class="text-muted small mb-1 fw-bold text-uppercase">Sales</p>
                        <div class="d-flex justify-content-between align-items-end">
                            <h3 class="fw-bold mb-0 text-success">@totalRevenue.ToString("N0") <small>RON</small></h3>
                            <div class="stat-icon bg-soft-success text-success">
                                <i class="bi bi-cash-stack"></i>
                            </div>
                        </div>
                        <div class="mt-2 x-small text-success"><i class="bi bi-graph-up me-1"></i> Finacial Details</div>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a href="/admin/reports/users" class="text-decoration-none h-100 d-block">
                    <div class="stat-card p-4 shadow-sm border-0 bg-white h-100 card-hover-warning">
                        <p class="text-muted small mb-1 fw-bold text-uppercase">Clients</p>
                        <div class="d-flex justify-content-between align-items-end">
                            <h3 class="fw-bold mb-0 text-warning">@totalUsers</h3>
                            <div class="stat-icon bg-soft-orange text-warning">
                                <i class="bi bi-people-fill"></i>
                            </div>
                        </div>
                        <div class="mt-2 x-small text-warning"><i class="bi bi-person-badge me-1"></i> Clients Report</div>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a href="/admin/reports/inventory" class="text-decoration-none h-100 d-block">
                    <div class="stat-card p-4 shadow-sm border-0 bg-white h-100 card-hover-brown">
                        <p class="text-muted small mb-1 fw-bold text-uppercase">Inventory</p>
                        <div class="d-flex justify-content-between align-items-end">
                            <h3 class="fw-bold mb-0 text-brown">@totalBooks</h3>
                            <div class="stat-icon bg-soft-brown text-brown">
                                <i class="bi bi-book-half"></i>
                            </div>
                        </div>
                        <div class="mt-2 x-small text-brown"><i class="bi bi-box-seam me-1"></i> Inventory Status</div>
                    </div>
                </a>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-4">
                <div class="glass-card p-4 shadow-lg border-0 bg-white mb-4">
                    <h5 class="fw-bold text-brown mb-3 border-bottom pb-2">Quick Management</h5>
                    <div class="list-group list-group-flush">
                        <a href="/books/create" class="list-group-item list-group-item-action d-flex align-items-center py-3 border-0">
                            <div class="icon-box bg-warning text-white me-3"><i class="bi bi-plus-lg"></i></div>
                            <div><h6 class="mb-0 fw-bold">Add Book</h6><small class="text-muted">New in Inventory</small></div>
                        </a>
                        <a href="/users" class="list-group-item list-group-item-action d-flex align-items-center py-3 border-0">
                            <div class="icon-box bg-primary text-white me-3"><i class="bi bi-person-gear"></i></div>
                            <div><h6 class="mb-0 fw-bold">Users</h6><small class="text-muted">Roles and permissions</small></div>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="glass-card p-4 shadow-lg border-0 bg-white h-100">
                    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
                        <h5 class="fw-bold text-brown mb-0"><i class="bi bi-shield-exclamation text-danger me-2"></i>Critical Stock</h5>
                        <span class="badge bg-danger">Under 5 units</span>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light small">
                                <tr>
                                    <th>Carte</th>
                                    <th class="text-center">Stock</th>
                                    <th class="text-end">Action</th>
                                </tr>
                            </thead>
                            <tbody class="small">
                                @if (criticalBooks != null && criticalBooks.Any())
                                {
                                    @foreach (var book in criticalBooks)
                                    {
                                        <tr>
                                            <td class="fw-bold">@book.BookTitle</td>
                                            <td class="text-center">
                                                <span class="badge @(book.BookStock == 0 ? "bg-dark" : "bg-soft-danger text-danger border border-danger") rounded-pill">
                                                    @book.BookStock
                                                </span>
                                            </td>
                                            <td class="text-end">
                                                <a href="@($"/books/edit?bookid={book.BookId}")" class="btn btn-sm btn-outline-brown rounded-pill px-3">Edit</a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="3" class="text-center text-muted py-4">There are no stock issues.</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --brown-primary: #5a3e2b;
        --orange-accent: #f0a500;
        --bg-soft: #fdf6ee;
    }

    body {
        background-color: var(--bg-soft);
        font-family: 'Inter', sans-serif;
    }

    .text-brown {
        color: var(--brown-primary);
    }

    .glass-card {
        border-radius: 1.5rem;
    }

    .stat-card {
        border-radius: 1.5rem;
        transition: all 0.3s cubic-bezier(.25,.8,.25,1);
        border: 1px solid transparent !important;
    }

        .stat-card:hover {
            transform: translateY(-7px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1) !important;
        }

    .card-hover-primary:hover {
        border-color: #0d6efd !important;
    }

    .card-hover-success:hover {
        border-color: #198754 !important;
    }

    .card-hover-warning:hover {
        border-color: #ffc107 !important;
    }

    .card-hover-brown:hover {
        border-color: var(--brown-primary) !important;
    }

    .stat-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.4rem;
    }

    .icon-box {
        width: 35px;
        height: 35px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .bg-soft-blue {
        background: #e3f2fd;
    }

    .bg-soft-success {
        background: #e8f5e9;
    }

    .bg-soft-orange {
        background: #fff3e0;
    }

    .bg-soft-brown {
        background: #efebe9;
    }

    .bg-soft-danger {
        background: #fff5f5;
    }

    .btn-outline-brown {
        color: var(--brown-primary);
        border: 1px solid var(--brown-primary);
    }

        .btn-outline-brown:hover {
            background: var(--brown-primary);
            color: white;
        }

    .x-small {
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
    }
</style>

@code {
    private int totalBooks, totalUsers, totalOrders;
    private decimal totalRevenue;
    private List<Book>? criticalBooks;

    protected override async Task OnInitializedAsync()
    {
        totalBooks = await DbContext.Book.CountAsync();
        totalUsers = await DbContext.User.CountAsync();
        totalOrders = await DbContext.Order.CountAsync();

        var rawItems = await DbContext.OrderItem.Select(oi => new { oi.Quantity, Price = oi.UnitPrice }).ToListAsync();
        totalRevenue = rawItems.Sum(x => (decimal)x.Quantity * x.Price);

        criticalBooks = await DbContext.Book
            .Where(b => b.BookStock < 5)
            .OrderBy(b => b.BookStock)
            .Take(6)
            .ToListAsync();
    }
}