@page "/antique/details"
@rendermode InteractiveServer
@using Booktique.Models.Services
@using Microsoft.EntityFrameworkCore
@using Booktique.Models.MainModels
@inject IDbContextFactory<BooktiqueContext> DbFactory
@inject NavigationManager NavigationManager
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthStateProvider
@inject CartService cartService
@implements IDisposable

<PageTitle>Chronicle of @book?.BookTitle</PageTitle>

<div class="antique-details-bg py-5">
    <div class="container">
        @if (book is null)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-gold" role="status"></div>
                <p class="text-gold mt-3 font-serif italic">Unlocking the archives...</p>
            </div>
        }
        else if (book.SellerId == 0 || book.Seller is null)
        {
            @* BLOCARE ACCES DACĂ NU EXISTĂ VÂNZĂTOR *@
            <div class="archive-folder p-5 text-center">
                <div class="alert alert-warning border-dark shadow-sm py-4">
                    <i class="bi bi-shield-lock text-danger display-4 mb-3 d-block"></i>
                    <h3 class="font-serif fw-bold">Restricted Archive</h3>
                    <p class="archive-author">This tome has no registered Curator and cannot be inspected.</p>
                </div>
                <a href="/antique" class="btn-quill text-decoration-none mt-3 d-inline-block">
                    <i class="bi bi-arrow-left me-2"></i>Return to Library
                </a>
            </div>
        }
        else
        {
            <div class="mb-4">
                <a href="/antique" class="btn-quill text-decoration-none">
                    <i class="bi bi-arrow-left me-2"></i>Return to Antique Booktique
                </a>
            </div>

            <div class="archive-folder p-4 p-md-5">
                <div class="row">
                    @* Partea Stângă: Imaginea Cărții *@
                    <div class="col-lg-5 mb-4 mb-lg-0">
                        <div class="archive-photo-frame">
                            <div class="archive-img-container">
                                <img src="@(string.IsNullOrEmpty(book.BookCoverPath) ? "/images/default-book.png" : book.BookCoverPath)"
                                     class="archive-img-fixed" alt="Book Image" />
                            </div>
                            <div class="photo-caption font-serif">Official Plate: @book.BookTitle</div>
                        </div>
                    </div>

                    @* Partea Dreaptă: Documentația (Detaliile din modelul Book) *@
                    <div class="col-lg-7">
                        <div class="archive-content">
                            <h5 class="archive-label text-uppercase mb-0">Book Ref. #@book.BookId</h5>
                            <h1 class="archive-title mb-1">@book.BookTitle</h1>
                            <p class="archive-author fs-4 mb-4">by @book.BookAuthor</p>

                            <div class="archive-separator mb-4"></div>

                            <div class="row g-4">
                                <div class="col-sm-6">
                                    <h6 class="text-muted fw-bold">Published</h6>
                                    <span class="badge-antique">@book.BookPublishingHouse (@book.BookYear)</span>
                                </div>
                                <div class="col-sm-6">
                                    <h6 class="text-muted fw-bold">Valuation</h6>
                                    <span class="price-ink">@book.BookPrice RON</span>
                                </div>
                                <div class="col-12">
                                    <h6 class="text-muted fw-bold">Curator's Description</h6>
                                    <p class="archive-description">"@book.BookDescription"</p>
                                </div>
                                <div class="col-sm-6">
                                    <h6 class="text-muted fw-bold">Category & Language</h6>
                                    <p class="small italic">@book.BookCategory | @book.BookLanguage</p>
                                </div>
                                <div class="col-sm-6">
                                    <h6 class="text-muted fw-bold">Registered Curator</h6>
                                    <p class="small italic text-brown-dark">
                                        <strong>@book.Seller.UserName</strong> (ID: #@book.SellerId)
                                    </p>
                                </div>
                            </div>

                            @* Acțiuni *@
                            <div class="d-flex gap-3 mt-5 pt-4 border-top border-dark-subtle">
                                @if (currentUserId != book.SellerId.ToString())
                                {
                                    <a href="/chat?targetUserId=@book.SellerId&initialMessage=Greetings! I am inquiring about: @book.BookTitle"
                                       class="btn-wax-seal px-4 py-2 text-decoration-none">
                                        <i class="bi bi-envelope-paper me-2"></i>Inquire Curator
                                    </a>
                                }

                                @if (isAdmin || currentUserId == book.SellerId.ToString())
                                {
                                    <a href="@($"/antique/edit?id={book.BookId}")" class="btn-scroll-edit px-4 py-2 text-decoration-none">
                                        <i class="bi bi-pencil-square me-1"></i> Amend Record
                                    </a>

                                    <button @onclick="DeleteBook" class="btn-scroll-edit px-4 py-2 text-danger">
                                        <i class="bi bi-trash3 me-1"></i> Expunge Tome
                                    </button>
                                }

                                <button class="btn-scroll-edit px-4 py-2"
                                        @onclick="HandleAddToCart"
                                        disabled="@(book.BookStock == 0)">

                                    @if (book.BookStock == 0)
                                    {
                                        <i class="bi bi-exclamation-circle me-2"></i>
                                        <span>Sold Out</span>
                                    }
                                    else
                                    {
                                        <i class="bi @(isAdded ? "bi-cart-check-fill text-warning" : "bi-cart-plus") me-2"></i>
                                        @(isAdded ? "In Cart" : "Add to Cart")
                                    }
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

