@code {
    private Book? book;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    private string? currentUserId;
    private bool isAdmin;
    private bool isAdded = false;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        currentUserId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value
                        ?? user.FindFirst("UserId")?.Value;

        isAdmin = user.IsInRole("Administrator");

        using var context = DbFactory.CreateDbContext();

        book = await context.Book
            .Include(b => b.Seller)
            .FirstOrDefaultAsync(m => m.BookId == Id);

        if (book is null)
        {
            NavigationManager.NavigateTo("notfound");
            return;
        }

        isAdded = cartService.Items.Any(i => i.BookId == book.BookId);

        cartService.OnChange += StateHasChanged;
    }

    private async Task DeleteBook()
    {
        if (book == null || (!isAdmin && currentUserId != book.SellerId.ToString()))
        {
            await JS.InvokeVoidAsync("alert", "Authority denied.");
            return;
        }

        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Strike this volume from the archives permanently?");

        if (confirmed)
        {
            using var context = DbFactory.CreateDbContext();
            var dbBook = await context.Book.FindAsync(book.BookId);
            if (dbBook != null)
            {
                context.Book.Remove(dbBook);
                await context.SaveChangesAsync();
                NavigationManager.NavigateTo("/antique");
            }
        }
    }

    private void HandleAddToCart()
    {
        if (book != null && book.BookStock > 0)
        {
            cartService.AddToCart(book);
            isAdded = true;
            StateHasChanged(); 
        }
    }

    public void Dispose()
    {
        cartService.OnChange -= StateHasChanged;
    }
}