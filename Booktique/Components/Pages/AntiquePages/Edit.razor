            background: #900000;
            transform: translateY(-2px);
        }

    .btn-scroll-edit {
        border: 1px solid #2c1e14;
        color: #2c1e14;
        font-family: 'Cinzel', serif;
    }

    .btn-quill {
        color: #d4c5a9;
        font-family: 'Cinzel', serif;
    }

    .wax-seal-switch .form-check-input:checked {
        background-color: #7a0000;
        border-color: #500000;
    }

    .text-gold {
        color: #c5a059;
    }
</style>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Book? Book { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (Book is null)
        {
            using var context = DbFactory.CreateDbContext();

            Book = await context.Book
                .Include(b => b.Seller)
                .FirstOrDefaultAsync(m => m.BookId == Id);
        }

        if (Book is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task UpdateBook()
    {
        if (Book?.SellerId == null || Book.SellerId == 0) return;

        using var context = DbFactory.CreateDbContext();
        context.Attach(Book!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
            NavigationManager.NavigateTo("/antique");
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!BookExists(Book!.BookId))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }
    }

    private bool BookExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Book.Any(e => e.BookId == id);
    }
}