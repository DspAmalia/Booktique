@page "/antique/edit"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using Booktique.Models.MainModels
@inject IDbContextFactory<BooktiqueContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Amending Book Record #@Id</PageTitle>

<div class="antique-edit-bg py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9">

                <div class="mb-4">
                    <a href="/antique" class="btn-quill text-decoration-none">
                        <i class="bi bi-journal-arrow-up me-2"></i>Return to Archive List
                    </a>
                </div>

                @if (Book is null)
                {
                    <div class="text-center py-5">
                        <div class="spinner-border text-gold" role="status"></div>
                        <p class="text-gold mt-3 font-serif italic">Retrieving original scrolls...</p>
                    </div>
                }
                else if (Book.SellerId == 0)
                {
                    <div class="inventory-scroll p-5 text-center">
                        <div class="alert alert-warning border-dark shadow-sm py-4">
                            <i class="bi bi-shield-lock text-danger display-4 mb-3 d-block"></i>
                            <h3 class="font-serif fw-bold">Unauthorized Amendment</h3>
                            <p class="archive-author">This book record is locked because it lacks an associated Seller (Curator).</p>
                        </div>
                        <a href="/antique" class="btn-wax-seal px-5 py-2 text-decoration-none d-inline-block mt-3">
                            Return to Safety
                        </a>
                    </div>
                }
                else
                {
                    <div class="inventory-scroll p-4 p-md-5">
                        <div class="text-center mb-5 border-bottom border-dark pb-4">
                            <h5 class="archive-label text-uppercase">Book Correction Module</h5>
                            <h1 class="archive-title">Amend Heritage Entry</h1>
                            <p class="archive-author fs-6">Modifying record for: <strong>@Book.BookTitle</strong></p>
                        </div>

                        <EditForm Model="Book" OnValidSubmit="UpdateBook" FormName="editBook">
                            <DataAnnotationsValidator />
                            <ValidationSummary class="text-danger small mb-4" />

                            <div class="row g-4">
                                @* I. Identificare *@
                                <div class="col-12">
                                    <h6 class="registry-section-title"><i class="bi bi-book me-2"></i>I. Tome Identification</h6>
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <label class="font-serif fw-bold text-brown-dark">Title</label>
                                            <InputText @bind-Value="Book.BookTitle" class="form-control ink-input" />
                                        </div>
                                        <div class="col-md-6">
                                            <label class="font-serif fw-bold text-brown-dark">Author</label>
                                            <InputText @bind-Value="Book.BookAuthor" class="form-control ink-input" />
                                        </div>
                                    </div>
                                </div>

                                @* II. Detalii Tehnice *@
                                <div class="col-md-4">
                                    <label class="font-serif fw-bold text-brown-dark">Publishing House</label>
                                    <InputText @bind-Value="Book.BookPublishingHouse" class="form-control ink-input" />
                                </div>
                                <div class="col-md-2">
                                    <label class="font-serif fw-bold text-brown-dark">Year</label>
                                    <InputNumber @bind-Value="Book.BookYear" class="form-control ink-input" />
                                </div>
                                <div class="col-md-3">
                                    <label class="font-serif fw-bold text-brown-dark">Language</label>
                                    <InputText @bind-Value="Book.BookLanguage" class="form-control ink-input" />
                                </div>
                                <div class="col-md-3">
                                    <label class="font-serif fw-bold text-brown-dark">Pages</label>
                                    <InputNumber @bind-Value="Book.BookNumberPag" class="form-control ink-input" />
                                </div>

                                @* III. Stare și Valoare *@
                                <div class="col-md-4">
                                    <label class="font-serif fw-bold text-brown-dark">Preservation State</label>
                                    <InputSelect @bind-Value="Book.Condition" class="form-select ink-input">
                                        <option value="Mint">Mint</option>
                                        <option value="Fine">Fine</option>
                                        <option value="Good">Good</option>
                                        <option value="Fair">Fair</option>
                                        <option value="Poor">Poor</option>
                                    </InputSelect>
                                </div>
                                <div class="col-md-4">
                                    <label class="font-serif fw-bold text-brown-dark">Price (RON)</label>
                                    <InputNumber @bind-Value="Book.BookPrice" class="form-control ink-input" />
                                </div>
                                <div class="col-md-4">
                                    <label class="font-serif fw-bold text-brown-dark">Stock</label>
                                    <InputNumber @bind-Value="Book.BookStock" class="form-control ink-input" />
                                </div>

                                @* IV. Vizual și Categorie *@
                                <div class="col-md-8">
                                    <label class="font-serif fw-bold text-brown-dark">Cover Image URL</label>
                                    <InputText @bind-Value="Book.BookCoverPath" class="form-control ink-input" />
                                </div>
                                <div class="col-md-4">
                                    <label class="font-serif fw-bold text-brown-dark">Category</label>
                                    <InputSelect @bind-Value="Book.BookCategory" class="form-select ink-input">
                                        <option value="Fiction">Fiction</option>
                                        <option value="Philosophy">Philosophy</option>
                                        <option value="History">History</option>
                                        <option value="Rare">Rare Artifact</option>
                                    </InputSelect>
                                </div>

                                @* V. Descriere *@
                                <div class="col-12">
                                    <label class="font-serif fw-bold text-brown-dark">Curator's Observations</label>
                                    <InputTextArea @bind-Value="Book.BookDescription" class="form-control ink-input" rows="4" />
                                </div>
                            </div>

                            <div class="d-flex justify-content-end gap-3 mt-5 pt-4 border-top border-dark">
                                <a href="/antique" class="btn-scroll-edit px-4 py-2 text-decoration-none">Discard Changes</a>
                                <button type="submit" class="btn-wax-seal px-5 py-2">
                                    Re-Seal Book Record
                                </button>
                            </div>
                        </EditForm>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=IM+Fell+English:ital@0;1&family=Playfair+Display:ital,wght@0,400;0,700;1,400&display=swap');

    body {
        background-image: url('https://www.transparenttextures.com/patterns/dark-wood.png'), linear-gradient(to bottom, #2c1e14, #3d2b1f);
        background-attachment: fixed;
    }

    .inventory-scroll {
        background-color: #f2e8d5;
        background-image: radial-gradient(circle, rgba(255,255,255,0.2) 0%, rgba(0,0,0,0.05) 100%), url('https://www.transparenttextures.com/patterns/old-map.png');
        border: 1px solid #d4c5a9;
        box-shadow: 0 30px 60px rgba(0,0,0,0.8);
        color: #1a120b;
        border-radius: 4px;
    }

    .archive-label {
        font-family: 'Cinzel', serif;
        color: #8b6b3e;
        letter-spacing: 3px;
        font-weight: 700;
        font-size: 0.9rem;
    }

    .archive-title {
        font-family: 'IM Fell English', serif;
        font-size: 2.5rem;
        font-weight: bold;
        color: #1a120b;
    }

    .archive-author {
        font-family: 'Playfair Display', serif;
        font-style: italic;
        color: #5a3e2b;
    }

    .ink-input {
        background: rgba(255, 255, 255, 0.3) !important;
        border: none !important;
        border-bottom: 1px solid #8b6b3e !important;
        border-radius: 0 !important;
        color: #1a120b !important;
        font-family: 'Playfair Display', serif;
    }

        .ink-input:focus {
            background: rgba(255, 255, 255, 0.5) !important;
            box-shadow: none !important;
            border-bottom: 2px solid #1a120b !important;
        }

    .btn-wax-seal {
        background: #7a0000;
        color: #fff;
        border: none;
        font-family: 'Cinzel', serif;
