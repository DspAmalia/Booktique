@page "/antiquelistings/details"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using Booktique.Models.MainModels
@inject IDbContextFactory<BooktiqueContext> DbFactory
@inject NavigationManager NavigationManager
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Chronicle of @antiquelisting?.OriginalBook?.BookTitle</PageTitle>

<div class="antique-details-bg py-5">
    <div class="container">
        @if (antiquelisting is null)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-gold" role="status"></div>
                <p class="text-gold mt-3 font-serif italic">Unlocking the archives...</p>
            </div>
        }
        else
        {
            <div class="mb-4">
                <a href="/antiquelistings" class="btn-quill text-decoration-none">
                    <i class="bi bi-arrow-left me-2"></i>Return to Antique Booktique
                </a>
            </div>

            <div class="archive-folder p-4 p-md-5">
                <div class="row">
                    @* Partea Stângă: Imaginea *@
                    <div class="col-lg-5 mb-4 mb-lg-0">
                        <div class="archive-photo-frame">
                            <img src="@(string.IsNullOrEmpty(antiquelisting.ImagePath) ? "/images/default-book.png" : antiquelisting.ImagePath)"
                                 class="img-fluid archive-img" alt="Book Image" />
                            <div class="photo-caption font-serif">Original Capture of the Tome</div>
                        </div>

                        @if (antiquelisting.IsSold)
                        {
                            <div class="sold-ribbon">TRANSACTED</div>
                        }
                    </div>

                    @* Partea Dreaptă: Documentația (Detaliile) *@
                    <div class="col-lg-7">
                        <div class="archive-content">
                            <h5 class="archive-label text-uppercase mb-0">Record No. #@antiquelisting.Id</h5>
                            <h1 class="archive-title mb-1">@antiquelisting.OriginalBook?.BookTitle</h1>
                            <p class="archive-author fs-4 mb-4">by @antiquelisting.OriginalBook?.BookAuthor</p>

                            <div class="archive-separator mb-4"></div>

                            <div class="row g-4">
                                <div class="col-sm-6">
                                    <h6 class="text-muted fw-bold">Preservation State</h6>
                                    <span class="badge-antique">@antiquelisting.Condition</span>
                                </div>
                                <div class="col-sm-6">
                                    <h6 class="text-muted fw-bold">Valuation</h6>
                                    <span class="price-ink">
                                        @(antiquelisting.IsExchangeOnly ? "BARTER/EXCHANGE ONLY" : $"{antiquelisting.Price} RON")
                                    </span>
                                </div>
                                <div class="col-12">
                                    <h6 class="text-muted fw-bold">Curator's Notes</h6>
                                    <p class="archive-description">"@antiquelisting.Description"</p>
                                </div>
                                <div class="col-sm-6">
                                    <h6 class="text-muted fw-bold">Date Cataloged</h6>
                                    <p class="small">@antiquelisting.DatePosted.ToString("dd MMMM, yyyy")</p>
                                </div>
                                <div class="col-sm-6">
                                    <h6 class="text-muted fw-bold">Owner Record</h6>
                                    @if (antiquelisting.Seller != null)
                                    {
                                        <p class="small italic text-brown-dark">
                                            Curator: <strong>@antiquelisting.Seller.UserName</strong> (Verified Member)
                                        </p>
                                    }
                                    else
                                    {
                                        <p class="small italic text-brown-dark">Collector #@antiquelisting.SellerId</p>
                                    }
                                </div>
                            </div>

                            @* Acțiuni în dosar *@
                            <div class="d-flex gap-3 mt-5 pt-4 border-top border-dark-subtle">
                                @* Oricine poate trimite un mesaj, mai puțin proprietarul *@
                                @if (!antiquelisting.IsSold && currentUserId != antiquelisting.SellerId.ToString())
                                {
                                    <a href="/chat?targetUserId=@antiquelisting.SellerId&initialMessage=Greetings, @(antiquelisting.Seller?.UserName)! I am interested in the volume: @antiquelisting.OriginalBook?.BookTitle"
                                       class="btn-wax-seal px-4 py-2 text-decoration-none">
                                        <i class="bi bi-envelope-paper me-2"></i>Send Inquiry
                                    </a>
                                }

                                @* Zona restricționată: Doar Admin sau Proprietar *@
                                @if (antiquelisting != null && (isAdmin || currentUserId == antiquelisting.SellerId.ToString()))
                                {
                                    <a href="@($"/antiquelistings/edit?id={antiquelisting.Id}")" class="btn-scroll-edit px-4 py-2 text-decoration-none">
                                        <i class="bi bi-pencil-square me-1"></i> Edit Record
                                    </a>

                                    <button @onclick="DeleteListing" class="btn-strike-archive px-4 py-2">
                                        <i class="bi bi-trash3 me-1"></i> Strike from Archive
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
