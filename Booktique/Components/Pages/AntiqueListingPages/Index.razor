@page "/antiquelistings"
@using Microsoft.EntityFrameworkCore
@using Booktique.Models.MainModels
@implements IAsyncDisposable
@inject IDbContextFactory<BooktiqueContext> DbFactory
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Antique Booktique | Booktique</PageTitle>

<div class="antique-shop-floor py-5">
    <div class="container">
        
        @* Antet Stilizat - Placuță de intrare *@
        <div class="shop-sign text-center mb-5 p-4">
            <h1 class="antique-title">Antique Booktique</h1>
            <div class="separator"><i class="bi bi-feather"></i></div>
            <p class="antique-subtitle">Rare Finds & Pre-loved Treasures from Our Annual Members</p>
            
            <button class="btn btn-ink mt-3 rounded-0 px-4" @onclick='() => NavigationManager.NavigateTo("antiquelistings/create")'>
                <i class="bi bi-journal-plus me-2"></i>List a Treasure
            </button>
        </div>

        @if (listings == null)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-sepia" role="status"></div>
                <p class="text-sepia mt-2 italic">Unrolling the scrolls...</p>
            </div>
        }
        else if (!listings.Any())
        {
            <div class="empty-shelf text-center py-5">
                <i class="bi bi-archive display-1"></i>
                <p class="mt-3">The shelves are dusty and empty. Be the first to donate a story.</p>
            </div>
        }
        else
        {
            <div class="row g-5">
                @foreach (var item in listings)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="book-tome @(item.IsSold ? "sold-tome" : "")">
                            @* Imaginea înrămată *@
                            <div class="tome-frame">
                                <img src="@(string.IsNullOrEmpty(item.ImagePath) ? "/images/default-book.png" : item.ImagePath)"
                                     class="tome-img" alt="@item.OriginalBook?.BookTitle">
                                
                                @if (item.IsSold)
                                {
                                    <div class="wax-seal">SOLD</div>
                                }
                                
                                <div class="tome-price">
                                    @(item.IsExchangeOnly ? "SWAP" : $"{item.Price} RON")
                                </div>
                            </div>

                            @* Eticheta tip "Manuscris" *@
                            <div class="tome-details mt-3">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <span class="tome-condition">@item.Condition</span>
                                    <span class="tome-date">Est. @item.DatePosted.ToString("MMMM yyyy")</span>
                                </div>
                                
                                <h4 class="tome-title">@item.OriginalBook?.BookTitle</h4>
                                <p class="tome-author">by @item.OriginalBook?.BookAuthor</p>
                                
                                <div class="tome-description">
                                    <p>@item.Description</p>
                                </div>

                                <div class="tome-actions d-flex gap-2 mt-3">
                                    <button class="btn-scroll w-100" @onclick='() => NavigationManager.NavigateTo($"antiquelistings/details?id={item.Id}")'>
                                        View Chronicle
                                    </button>
                                    @if (!item.IsSold)
                                    {
                                        <button class="btn-ink-sm" title="Contact Collector">
                                            <i class="bi bi-chat-left-quote"></i>
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=IM+Fell+English+SC&family=Playfair+Display:ital,wght@0,400;0,700;1,400&display=swap');

    :root {
        --dark-wood: #3d2b1f;
        --ink-color: #2c1e14;
        --sepia-paper: #f4ecd8;
        --wax-red: #8b0000;
        --accent-gold: #c5a059;
    }

    body {
        background-image: url('https://www.transparenttextures.com/patterns/dark-wood.png'), linear-gradient(to bottom, #2c1e14, #3d2b1f);
    }

    .antique-shop-floor {
        min-height: 100vh;
        color: var(--sepia-paper);
        font-family: 'Playfair Display', serif;
    }

    .shop-sign {
        background-color: var(--sepia-paper);
        border: 8px double var(--dark-wood);
        color: var(--ink-color);
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        border-radius: 2px;
    }

    .antique-title {
        font-family: 'IM Fell English SC', serif;
        font-size: 3.5rem;
        margin-bottom: 0;
    }

    .separator {
        color: var(--accent-gold);
        font-size: 1.5rem;
        margin: 10px 0;
    }

    .antique-subtitle {
        font-style: italic;
        font-size: 1.2rem;
    }

    .book-tome {
        background: var(--sepia-paper);
        padding: 20px;
        color: var(--ink-color);
        border-radius: 2px;
        box-shadow: 5px 5px 15px rgba(0,0,0,0.3);
        position: relative;
        transition: all 0.3s ease;
        border: 1px solid rgba(0,0,0,0.1);
    }

    .book-tome:hover {
        transform: rotate(-1deg) scale(1.02);
        box-shadow: 15px 15px 30px rgba(0,0,0,0.4);
    }

    .tome-frame {
        position: relative;
        border: 5px solid white;
        box-shadow: inset 0 0 10px rgba(0,0,0,0.2);
        height: 300px;
        overflow: hidden;
    }

    .tome-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: sepia(0.3) contrast(1.1);
    }

    .tome-price {
        position: absolute;
        bottom: 0;
        right: 0;
        background: var(--dark-wood);
        color: var(--accent-gold);
        padding: 5px 15px;
        font-family: 'Cinzel', serif;
        font-weight: bold;
    }

    .wax-seal {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) rotate(-20deg);
        width: 100px;
        height: 100px;
        background: var(--wax-red);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        border: 4px dashed rgba(255,255,255,0.3);
        box-shadow: 0 0 10px rgba(0,0,0,0.5);
        z-index: 2;
    }

    .tome-title {
        font-family: 'Cinzel', serif;
        font-weight: 700;
        border-bottom: 1px solid rgba(0,0,0,0.1);
        padding-bottom: 5px;
    }

    .tome-author {
        font-style: italic;
        color: #555;
    }

    .tome-condition {
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        background: var(--accent-gold);
        color: white;
        padding: 2px 8px;
    }

    .tome-description {
        font-size: 0.9rem;
        line-height: 1.4;
        height: 60px;
        overflow: hidden;
        position: relative;
    }

    .btn-ink {
        background: var(--ink-color);
        color: var(--accent-gold);
        border: 1px solid var(--accent-gold);
        font-family: 'Cinzel', serif;
        transition: all 0.3s;
    }

    .btn-ink:hover {
        background: var(--accent-gold);
        color: var(--ink-color);
    }

    .btn-scroll {
        background: transparent;
        border: 1px solid var(--ink-color);
        color: var(--ink-color);
        padding: 5px;
        font-family: 'Cinzel', serif;
        font-size: 0.8rem;
    }

    .btn-scroll:hover {
        background: var(--ink-color);
        color: var(--sepia-paper);
    }

    .btn-ink-sm {
        background: var(--dark-wood);
        color: white;
        border: none;
        padding: 5px 15px;
    }

    .text-sepia { color: var(--sepia-paper); }
    .italic { font-style: italic; }

    .sold-tome {
        filter: opacity(0.8);
    }
</style>

@code {
    private BooktiqueContext context = default!;
    private List<AntiqueListing>? listings;

    protected override async Task OnInitializedAsync()
    {
        context = DbFactory.CreateDbContext();

        // Include OriginalBook pentru a avea acces la Titlu și Autor
        listings = await context.AntiqueListing
            .Include(a => a.OriginalBook)
            .OrderByDescending(a => a.DatePosted)
            .ToListAsync();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}