@page "/orders/details"
@using Microsoft.EntityFrameworkCore
@using Booktique.Models.MainModels
@inject IDbContextFactory<BooktiqueContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Order Details | #@OrderId</PageTitle>

@if (order is null)
{
    <div class="text-center py-5 d-print-none">
        <div class="spinner-border text-brown" role="status"></div>
        <p class="mt-2">Loading order details...</p>
    </div>
}
else
{
    <div class="invoice-print-area">
        <div class="invoice-header d-flex justify-content-between align-items-center border-bottom pb-4 mb-5">
            <div class="d-flex align-items-center">
                <img src="/images/logo.png" alt="Booktique Logo" style="height: 80px; width: auto;" class="me-3" />
                <div>
                    <h1 class="text-brown fw-bold mb-0" style="font-size: 2.5rem;">BOOKTIQUE</h1>
                    <p class="text-muted mb-0 small">Librăria ta online preferată</p>
                </div>
            </div>

            <div class="text-end small">
                <h5 class="fw-bold mb-1">S.C. BOOKTIQUE S.R.L.</h5>
                <p class="mb-0"><strong>Address:</strong> Str. Lipscani Nr. 12, București</p>
                <p class="mb-0"><strong>Phone:</strong> 0749 656 025</p>
                <p class="mb-0"><strong>Email:</strong> booktique@gmail.com</p>
            </div>
        </div>

        <div class="d-flex justify-content-between mb-5">
            <div>
                <h6 class="fw-bold text-uppercase text-muted small">Billed To:</h6>
                <p class="mb-0 fw-bold">@order.ShippingAddress.Split('|')[0]</p>
                <p class="mb-0">@order.ShippingAddress</p>
                <p class="mb-0">@order.City</p>
                <p>Tel: @order.PhoneNumber</p>
            </div>
            <div class="text-end">
                <h4 class="fw-bold">INVOICE</h4>
                <p class="mb-0">#INV-@order.OrderId</p>
                <p class="mb-0">Date: @order.OrderDate.ToString("dd/MM/yyyy")</p>
                <p>Payment: @order.PaymentMethod</p>
            </div>
        </div>

        <table class="table table-borderless">
            <thead class="border-bottom border-2">
                <tr>
                    <th>Item Description</th>
                    <th class="text-center">Qty</th>
                    <th class="text-end">Price</th>
                    <th class="text-end">Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in order.OrderItems)
                {
                    <tr class="border-bottom">
                        <td class="py-3">
                            <span class="fw-bold">@item.Book?.BookTitle</span><br />
                            <small class="text-muted">Author: @item.Book?.BookAuthor</small>
                        </td>
                        <td class="text-center py-3">@item.Quantity</td>
                        <td class="text-end py-3">@item.UnitPrice lei</td>
                        <td class="text-end fw-bold py-3">@(item.UnitPrice * item.Quantity) lei</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="row mt-5">
            <div class="col-7">
                <p class="text-muted small">Thank you for your business! For any questions regarding this invoice, please contact support@booktique.ro</p>
            </div>
            <div class="col-5 text-end">
                <div class="d-flex justify-content-between border-top border-2 pt-2">
                    <span class="fs-4 fw-bold">Total Payment:</span>
                    <span class="fs-4 fw-bold text-orange">@order.TotalAmount lei</span>
                </div>
            </div>
        </div>
    </div>

    <div class="container py-5 d-print-none">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <a class="btn btn-secondary rounded-pill px-4" href="@($"/users/details?userid={order?.UserId}")">
                <i class="bi bi-arrow-left me-2"></i>Back to User Details
            </a>
            <h2 class="text-brown fw-bold mb-0">Order #@OrderId</h2>

            <button class="btn btn-brown rounded-pill px-4 shadow" onclick="window.print()">
                <i class="bi bi-printer me-2"></i>Print Invoice
            </button>
        </div>

        <hr />

        <div class="row g-4">
            <div class="col-md-4">
                <div class="glass-card p-4 shadow-sm bg-white mb-4">
                    <h5 class="fw-bold text-brown border-bottom pb-2 mb-3">User Info</h5>
                    <p class="mb-1 text-muted small fw-bold text-uppercase">Delivery Address</p>
                    <p class="mb-3">@order.ShippingAddress</p>
                    <p class="mb-1 text-muted small fw-bold text-uppercase">City</p>
                    <p class="mb-3">@order.City</p>
                    <p class="mb-1 text-muted small fw-bold text-uppercase">Phone</p>
                    <p class="mb-0">@order.PhoneNumber</p>
                </div>
                <div class="glass-card p-4 shadow-sm bg-white">
                    <h5 class="fw-bold text-brown border-bottom pb-2 mb-3">Payment Method</h5>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-credit-card-2-front fs-3 text-orange me-3"></i>
                        <span>@order.PaymentMethod</span>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="glass-card shadow-sm bg-white overflow-hidden">
                    <div class="bg-light p-3 border-bottom">
                        <h5 class="fw-bold mb-0 text-brown">Ordered Items</h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Product</th>
                                    <th class="text-center">Qty</th>
                                    <th class="text-end">Price</th>
                                    <th class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in order.OrderItems)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (item.Book != null)
                                                {
                                                    <img src="@item.Book.BookCoverPath" alt="Cover" class="rounded me-3" style="width: 40px; height: 60px; object-fit: cover;" />
                                                    <div>
                                                        <p class="mb-0 fw-bold">@item.Book.BookTitle</p>
                                                        <small class="text-muted">@item.Book.BookAuthor</small>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <p class="mb-0 fw-bold">Produs #@item.BookId</p>
                                                }
                                            </div>
                                        </td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">@item.UnitPrice lei</td>
                                        <td class="text-end fw-bold">@(item.Quantity * item.UnitPrice) lei</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<style>
    html, body {
        background-color: #fdf6ee;
    }

    .glass-card {
        border-radius: 1rem;
        border: 1px solid rgba(0,0,0,0.05);
    }

    .text-brown {
        color: #5a3e2b;
    }

    .text-orange {
        color: #f0a500;
    }

    .btn-brown {
        background-color: #5a3e2b;
        color: white;
    }

    .invoice-print-area {
        display: none;
    }

    @@media print {
        header, nav, footer, .sidebar, .top-row, .navbar, .d-print-none {
            display: none !important;
            height: 0 !important;
            margin: 0 !important;
            padding: 0 !important;
            visibility: hidden !important;
        }
        main, .main, .content, .page {
            padding: 0 !important;
            margin: 0 !important;
            display: block !important;
        }
        .invoice-print-area {
            display: block !important;
            position: absolute;
            top: 0;
            left: 0;
            width: 100% !important;
            background-color: white !important;
            padding: 1.5cm !important;
            z-index: 9999; 
        }

        body {
            background-color: white !important;
        }

        * {
            -webkit-print-color-adjust: exact !important;
            print-color-adjust: exact !important;
        }

        @@page {
            margin: 0;
            size: auto;
        }
    }
</style>

@code {
    [SupplyParameterFromQuery] public int id { get; set; }
    private int OrderId => id;
    private Order? order;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        order = await context.Order
            .Include(o => o.OrderItems).ThenInclude(oi => oi.Book)
            .FirstOrDefaultAsync(o => o.OrderId == id);
    }
}