@page "/order-details/{OrderId:int}"
@using Booktique.Models.MainModels
@using Microsoft.AspNetCore.WebUtilities
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<BooktiqueContext> DbFactory
@inject NavigationManager Nav
@rendermode InteractiveServer

<div class="container mt-5 mb-5">
    <div class="card shadow border-0 rounded-4 overflow-hidden">
        <div class="p-4 d-flex justify-content-between align-items-center" style="background-color: #fdfaf8; border-bottom: 2px solid #ceb9a6;">
            <div>
                <h3 class="fw-bold mb-0" style="color: #3d2b1f;">Order #@OrderId</h3>
                <p class="text-muted mb-0 small">Plasată la: @order?.OrderDate.ToString("dd MMM yyyy, HH:mm")</p>
            </div>
            <a class="btn btn-sm px-3 rounded-pill" style="border: 1px solid #ceb9a6; color: #3d2b1f;" href="/">
                <i class="bi bi-arrow-left me-1"></i> Back to Home
            </a>
        </div>

        <div class="card-body p-4">
            @if (order == null)
            {
                <div class="text-center p-5">
                    <div class="spinner-border" style="color: #ceb9a6;" role="status"></div>
                    <p class="mt-3 text-muted">Searching order details in the library...</p>
                </div>
            }
            else
            {
                <div class="row g-4 mb-5">
                    @* Status și Info Plata *@
                    <div class="col-md-4">
                        <div class="p-3 rounded-3 bg-light h-100">
                            <h6 class="text-uppercase text-muted fw-bold small mb-3">Status & Payment</h6>
                            <div class="mb-3">
                                <span class="badge rounded-pill @GetStatusClass(order.Status) px-3 py-2 fs-6">
                                    @order.Status.ToString()
                                </span>
                            </div>
                            <p class="mb-1"><strong>Method:</strong> @order.PaymentMethod</p>
                            <p class="mb-0"><strong>Total:</strong> <span class="text-primary fw-bold">@order.TotalAmount.ToString("N2") lei</span></p>
                        </div>
                    </div>

                    @* Informații Livrare *@
                    <div class="col-md-8">
                        <div class="p-3 rounded-3 bg-light h-100">
                            <h6 class="text-uppercase text-muted fw-bold small mb-3">Delivery Details</h6>
                            <div class="row">
                                <div class="col-sm-6">
                                    <p class="mb-1 text-muted">Address:</p>
                                    <p class="fw-medium">@order.ShippingAddress</p>
                                </div>
                                <div class="col-sm-6">
                                    <p class="mb-1 text-muted">City & Contact:</p>
                                    <p class="mb-0 fw-medium">@order.City</p>
                                    <p class="fw-medium">@order.PhoneNumber</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <h5 class="fw-bold mb-4" style="color: #3d2b1f;">Products ordered</h5>
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead style="background-color: #f8f9fa;">
                            <tr>
                                <th class="border-0 px-4">Book</th>
                                <th class="border-0 text-center">Quantity</th>
                                <th class="border-0 text-end px-4">Unit Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in order.OrderItems)
                            {
                                <tr>
                                    <td class="px-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <div class="p-2 rounded bg-light me-3">
                                                <i class="bi bi-book fs-4 text-muted"></i>
                                            </div>
                                            <div>
                                                <div class="fw-bold text-dark">@item.Book?.BookTitle</div>
                                                <div class="text-muted small">@item.Book?.BookAuthor</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center fw-bold">@item.Quantity</td>
                                    <td class="text-end px-4 font-monospace">@item.UnitPrice.ToString("N2") lei</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="2" class="text-end fw-bold py-4">TOTAL:</td>
                                <td class="text-end px-4 py-4 fw-bold fs-5 text-primary">@order.TotalAmount.ToString("N2") lei</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<style>
    body {
        background-color: #fdf6ee !important;
        font-family: 'Inter', 'Segoe UI', sans-serif !important;
    }

    .text-primary {
        color: #ceb9a6 !important;
    }

    .bg-status-pending {
        background-color: #ffeaa7;
        color: #d35400;
    }

    .bg-status-confirmed {
        background-color: #fab1a0;
        color: #e17055;
    }

    .bg-status-shipped {
        background-color: #81ecec;
        color: #008b8b;
    }

    .bg-status-delivered {
        background-color: #55efc4;
        color: #00b894;
    }

    .bg-status-cancelled {
        background-color: #ff7675;
        color: white;
    }
</style>

@code {
    [Parameter] public int OrderId { get; set; }
    private Order? order;

    protected override async Task OnInitializedAsync()
    {
        await LoadOrderDetails();
        await CheckAndMarkAsRead(); 
    }

    private async Task CheckAndMarkAsRead()
    {
        var uri = Nav.ToAbsoluteUri(Nav.Uri);
        if (QueryHelpers.ParseQuery(uri.Query).TryGetValue("notifId", out var notifIdStr))
        {
            if (int.TryParse(notifIdStr, out int notifId))
            {
                await using var ctx = await DbFactory.CreateDbContextAsync();

                await ctx.Notification
                    .Where(n => n.NotificationId == notifId && !n.IsRead)
                    .ExecuteUpdateAsync(s => s.SetProperty(n => n.IsRead, true));
            }
        }
    }

    private async Task LoadOrderDetails()
    {
        await using var ctx = await DbFactory.CreateDbContextAsync();

        order = await ctx.Order
            .Include(o => o.OrderItems)
                .ThenInclude(oi => oi.Book)
            .FirstOrDefaultAsync(o => o.OrderId == OrderId);
    }

    private string GetStatusClass(OrderStatus status) => status switch
    {
        OrderStatus.Pending => "bg-status-pending",
        OrderStatus.Confirmed => "bg-status-confirmed",
        OrderStatus.Shipped => "bg-status-shipped",
        OrderStatus.Delivered => "bg-status-delivered",
        OrderStatus.Cancelled => "bg-status-cancelled",
        _ => "bg-secondary text-white"
    };
}