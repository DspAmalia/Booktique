@page "/success"
@using Microsoft.EntityFrameworkCore
@using System.Security.Claims
@using static Booktique.Models.MainModels.User
@inject IDbContextFactory<BooktiqueContext> DbFactory
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavManager

@rendermode InteractiveServer

<PageTitle>Success</PageTitle>

<div class="container text-center mt-5">
    <div class="card shadow p-5 border-0">
        <h2 class="text-success mb-3">✅ The payment was made successfully!</h2>
        <p class="lead">Thank you for subscribing. Your account has been updated.</p>
        <hr />
        <p class="text-muted">You now have access to Messenger and the rest of Booktique's features.</p>

        <div class="mt-4">
            <button class="btn btn-secondary btn-lg" @onclick="GoHome">Back to Home</button>
            <button class="btn btn-outline-warning btn-lg ms-2" @onclick="GoToChat">Go to Chat</button>
        </div>
    </div>
</div>

<style>
    html, body {
        height: 100%;
        margin: 0;
        background: #fdf6ee;
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    }

    .container {
        max-width: 800px;
    }

    .card {
        border-radius: 15px;
        background-color: white;
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .text-success {
        color: #28a745 !important;
        font-weight: bold;
    }

    .btn-lg {
        padding: 0.8rem 2rem;
        font-weight: 600;
        border-radius: 10px;
    }

    hr {
        border-top: 1px solid #d6c9b3;
        width: 50%;
        margin: 1.5rem auto;
    }
</style>

@code {
    [SupplyParameterFromQuery]
    public string? Plan { get; set; } // Primește "monthly" sau "yearly" din URL (?plan=monthly)

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            var userIdStr = user.FindFirst(ClaimTypes.NameIdentifier)?.Value
                            ?? user.FindFirst("UserId")?.Value;

            if (int.TryParse(userIdStr, out int userId))
            {
                using var context = DbFactory.CreateDbContext();
                var dbUser = await context.User.FindAsync(userId);

                if (dbUser != null)
                {
                    // Mapăm string-ul din URL la tipul de Enum
                    var newLevel = Plan?.ToLower() switch
                    {
                        "monthly" => SubscriptionLevel.Monthly,
                        "yearly" => SubscriptionLevel.Yearly,
                        _ => SubscriptionLevel.None
                    };

                    // Actualizăm doar dacă planul primit este valid și diferit de ce are deja
                    if (newLevel != SubscriptionLevel.None && dbUser.IsSubscribed != newLevel)
                    {
                        dbUser.IsSubscribed = newLevel;
                        await context.SaveChangesAsync();
                    }
                }
            }
        }
    }

    private void GoHome() => NavManager.NavigateTo("/");
    private void GoToChat() => NavManager.NavigateTo("/chat");
}