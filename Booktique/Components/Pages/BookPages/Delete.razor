@page "/books/delete"
@using Microsoft.EntityFrameworkCore
@using Booktique.Models.MainModels
@inject IDbContextFactory<BooktiqueContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete Book | Booktique</PageTitle>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="text-center mb-4">
                <h2 class="text-danger fw-bold">Delete Book</h2>
                <p class="text-muted">Are you sure you want to permanently remove this title from the library?</p>
            </div>

            @if (book is null)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-brown" role="status"></div>
                    <p class="mt-2">Loading book details...</p>
                </div>
            }
            else
            {
                <div class="glass-card shadow-lg border-0 overflow-hidden bg-white">
                    <div class="row g-0">
                        <div class="col-md-4 bg-light d-flex align-items-center justify-content-center p-4">
                            <div class="preview-container shadow">
                                <img src="@book.BookCoverPath" class="img-fluid rounded" alt="Cover"
                                     onerror="this.src='https://via.placeholder.com/200x300?text=No+Cover';">
                            </div>
                        </div>

                        <div class="col-md-8 p-4 p-md-5">
                            <div class="mb-4">
                                <span class="badge bg-warning text-dark rounded-pill px-3 mb-2">@book.BookCategory</span>
                                <h3 class="fw-bold text-brown mb-1">@book.BookTitle</h3>
                                <p class="text-muted mb-3">by <strong>@book.BookAuthor</strong></p>
                                <hr />
                            </div>

                            <div class="row g-3 small">
                                <div class="col-6">
                                    <p class="mb-1 text-muted fw-bold text-uppercase" style="font-size: 0.7rem;">Publishing House</p>
                                    <p class="mb-0 text-brown">@book.BookPublishingHouse</p>
                                </div>
                                <div class="col-6">
                                    <p class="mb-1 text-muted fw-bold text-uppercase" style="font-size: 0.7rem;">Year</p>
                                    <p class="mb-0 text-brown">@book.BookYear</p>
                                </div>
                                <div class="col-6">
                                    <p class="mb-1 text-muted fw-bold text-uppercase" style="font-size: 0.7rem;">Price</p>
                                    <p class="mb-0 fw-bold text-orange">@book.BookPrice lei</p>
                                </div>
                                <div class="col-6">
                                    <p class="mb-1 text-muted fw-bold text-uppercase" style="font-size: 0.7rem;">Stock</p>
                                    <p class="mb-0">@book.BookStock units</p>
                                </div>
                            </div>

                            <div class="mt-5 d-flex gap-3">
                                <EditForm method="post" Model="book" OnValidSubmit="DeleteBook" FormName="delete" Enhance>
                                    <button type="submit" class="btn btn-danger px-4 py-2 rounded-pill fw-bold shadow-sm">
                                        <i class="bi bi-trash3-fill me-2"></i>Confirm Delete
                                    </button>
                                </EditForm>

                                <a href="/" class="btn btn-outline-secondary px-4 py-2 rounded-pill fw-bold">
                                    Cancel
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="alert alert-warning mt-4 rounded-4 border-0 shadow-sm" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>Attention:</strong> This action cannot be undone. All data related to this book will be lost.
                </div>
            }
        </div>
    </div>
</div>

<style>
    :root {
        --brown-primary: #5a3e2b;
        --orange-accent: #f0a500;
        --bg-soft: #fdf6ee;
    }

    body {
        background-color: var(--bg-soft);
        font-family: 'Helvetica Neue', Arial, sans-serif;
    }

    .text-brown {
        color: var(--brown-primary);
    }

    .text-orange {
        color: var(--orange-accent);
    }

    .glass-card {
        border-radius: 1.5rem;
        border: 1px solid rgba(0,0,0,0.05);
    }

    .preview-container {
        width: 100%;
        max-width: 180px;
        aspect-ratio: 2/3;
        border-radius: 10px;
        overflow: hidden;
    }

        .preview-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #bb2d3b;
            transform: scale(1.05);
        }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: white;
    }
</style>

@code {
    private Book? book;

    [SupplyParameterFromQuery]
    private int BookId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        book = await context.Book.FirstOrDefaultAsync(m => m.BookId == BookId);

        if (book is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteBook()
    {
        using var context = DbFactory.CreateDbContext();
        if (book != null)
        {
            context.Book.Remove(book);
            await context.SaveChangesAsync();
            NavigationManager.NavigateTo("/");
        }
    }
}